{
  "info": {
    "_postman_id": "4bb92ca6-08b0-4fde-bb4f-0d1670f44152",
    "name": "ExploreWithMe Comments Feature",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Comment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"Отличное событие!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/{{userId}}/events/{{eventId}}/comments",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "users",
            "{{userId}}",
            "events",
            "{{eventId}}",
            "comments"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Comment created', function () {",
              "    pm.response.to.have.status(201);",
              "    const data = pm.response.json();",
              "    pm.expect(data).to.have.property('id');",
              "    pm.expect(data.status).to.eql('PENDING');",
              "    pm.collectionVariables.set('commentId', data.id);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Pending Comments (Admin)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/admin/comments?status=PENDING",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "admin",
            "comments"
          ],
          "query": [
            {
              "key": "status",
              "value": "PENDING"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Pending comments retrieved', function () {",
              "    pm.response.to.have.status(200);",
              "    pm.expect(Array.isArray(pm.response.json())).to.be.true;",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Publish Comment (Admin)",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"PUBLISHED\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/admin/comments/{{commentId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "admin",
            "comments",
            "{{commentId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Comment published', function () {",
              "    pm.response.to.have.status(200);",
              "    const data = pm.response.json();",
              "    pm.expect(data.status).to.eql('PUBLISHED');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Event Comments (Public)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/events/{{eventId}}/comments",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "events",
            "{{eventId}}",
            "comments"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Published comments visible', function () {",
              "    pm.response.to.have.status(200);",
              "    const data = pm.response.json();",
              "    pm.expect(Array.isArray(data)).to.be.true;",
              "    if (data.length > 0) {",
              "        pm.expect(data[0].status).to.eql('PUBLISHED');",
              "    }",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Update Comment (User)",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"Обновлённый комментарий\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/{{userId}}/comments/{{commentId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "users",
            "{{userId}}",
            "comments",
            "{{commentId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Comment updated and returned to moderation', function () {",
              "    pm.response.to.have.status(200);",
              "    const data = pm.response.json();",
              "    pm.expect(data.status).to.eql('PENDING');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Delete Comment (User)",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/users/{{userId}}/comments/{{commentId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "users",
            "{{userId}}",
            "comments",
            "{{commentId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Comment deleted', function () {",
              "    pm.response.to.have.status(204);",
              "});"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "userId",
      "value": "1"
    },
    {
      "key": "eventId",
      "value": "1"
    }
  ]
}

