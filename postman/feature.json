        {
          "name": "Create Event",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const date = new Date(Date.now() + 48 * 60 * 60 * 1000);",
                  "const pad = (n) => n.toString().padStart(2, '0');",
                  "const eventDate = `${date.getFullYear()}-${pad(date.getMonth() + 1)}-${pad(date.getDate())} ${pad(date.getHours())}:${pad(date.getMinutes())}:${pad(date.getSeconds())}`;",
                  "pm.collectionVariables.set('eventDate', eventDate);",
                  "",
                  "const categoryId = pm.collectionVariables.get('categoryId');",
                  "const initiatorId = pm.collectionVariables.get('initiatorId');",
                  "",
                  "const body = {",
                  "    annotation: 'Test event annotation for comment workflow with sufficient length to pass validation.',",
                  "    category: parseInt(categoryId),",
                  "    description: 'Detailed description for the test event to ensure we meet all validation requirements for the comment feature testing.',",
                  "    eventDate: eventDate,",
                  "    location: { lat: 55.751244, lon: 37.618423 },",
                  "    paid: false,",
                  "    participantLimit: 0,",
                  "    requestModeration: false,",
                  "    title: 'Test Event ' + Date.now()",
                  "};",
                  "",
                  "pm.request.body.update({",
                  "    mode: 'raw',",
                  "    raw: JSON.stringify(body, null, 2)",
                  "});"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Event created', function () {",
                  "    pm.response.to.have.status(201);",
                  "    const body = pm.response.json();",
                  "    pm.collectionVariables.set('eventId', body.id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/{{initiatorId}}/events",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "users",
                "{{initiatorId}}",
                "events"
              ]
            }
          }
        },
