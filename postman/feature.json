    {
      "name": "Get Pending Comments (Admin)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Pending comments retrieved', function () {",
              "    pm.response.to.have.status(200);",
              "    const data = pm.response.json();",
              "    pm.expect(Array.isArray(data)).to.be.true;",
              "    pm.expect(data.length).to.be.above(0);",
              "    if (data.length > 0) {",
              "        pm.collectionVariables.set('commentId', data[0].id);",
              "    }",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/admin/comments?status=PENDING",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "admin",
            "comments"
          ],
          "query": [
            {
              "key": "status",
              "value": "PENDING"
            }
          ]
        }
