    {
      "name": "Create Event",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const eventDate = new Date(Date.now() + 4 * 60 * 60 * 1000)",
              "    .toISOString()",
              "    .replace('T', ' ')",
              "    .substring(0, 19);",
              "pm.collectionVariables.set('eventDate', eventDate);"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Event created', function () {",
              "    pm.response.to.have.status(201);",
              "    const body = pm.response.json();",
              "    pm.expect(body).to.have.property('id');",
              "    pm.collectionVariables.set('eventId', body.id);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"annotation\": \"Annotation for comments {{traceSuffix}}\",\n  \"category\": {{categoryId}},\n  \"description\": \"Description for comments {{traceSuffix}}\",\n  \"eventDate\": \"{{eventDate}}\",\n  \"location\": {\n    \"lat\": 55.75,\n    \"lon\": 37.62\n  },\n  \"paid\": false,\n  \"participantLimit\": 10,\n  \"requestModeration\": true,\n  \"title\": \"Event for comments {{traceSuffix}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/{{initiatorId}}/events",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "users",
            "{{initiatorId}}",
            "events"
          ]
        }
      }
    },
